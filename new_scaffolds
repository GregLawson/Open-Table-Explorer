rails generate scaffold stream_method_call id:integer stream_method_id:integer  # like a method call, many-to-many parmeters/streams 
rails generate scaffold stream_parameters id:integer stream_method_call_id:integer stream_method_argument_id:integer # like a method call, many-to-many parmeters/streams 
rails generate scaffold stream_method name:string library:string interface_code:text return_code:text rescue_code:text  # like a method definition
rails generate scaffold stream_method_argument id:integer stream_method_id:integer name:string ruby_type:string direction:string parameter_id:integer parameter_type:string
rails generate scaffold scalar_argument id:integer name:string value:string formula:string ruby_type:string  # include single and non-stream multiple values? like arrays of hashes, ActiveRecord

http://guides.rubyonrails.org/association_basics.html#polymorphic-associations

class StreamMethodCall < ActiveRecord::Base # like a method call
has_one :stream_method
has_many :stream_parameters
end #class
class StreamParameter < ActiveRecord::Base # like the parameters of a method call
belongs_to :stream_method_calls
belongs_to :stream_method_arguments
end #class
class StreamMethod  < ActiveRecord::Base # like a method def
has_many :stream_method_calls
has_many :stream_method_arguments, :as => :arguments
end #class
class StreamMethodArgument < ActiveRecord::Base # like the arguments of a methed def
has_many :arguments, :polymorphic => true
end #class
class ScalarArgument  < ActiveRecord::Base # like a scalar argument 
has_many :stream_parameters, :as => :arguments
end #class