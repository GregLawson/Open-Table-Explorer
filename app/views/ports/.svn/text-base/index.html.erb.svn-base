<h1>Listing ports</h1>

<table>
  <tr>
    <th>Protocol</th>
    <th>Port</th>
    <th>Portname</th>
    <th>Ip</th>
  </tr>

<% for port in @ports %>
  <tr>
    <td><%=h port.protocol %></td>
    <td><%=h port.port %></td>
    <td><%=h port.portname %></td>
    <td><%=h port.ip %></td>
    <td><%= link_to 'Show', port %></td>
    <td><%= link_to 'Edit', edit_port_path(port) %></td>
    <td><%= link_to 'Destroy', port, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New port', new_port_path %>
