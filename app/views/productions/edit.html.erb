<h1>Editing production</h1>
  <% semantic_form_for @production do |form| %>
    <%= form.inputs %>
    <%= form.buttons %>
  <% end %>

<% form_for(@production) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :power %><br />
    <%= f.text_field :power %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

