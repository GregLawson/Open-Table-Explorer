<h1>New frequency</h1>

<% form_for(@frequency) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :frequency_name %><br />
    <%= f.text_field :frequency_name %>
  </p>
  <p>
    <%= f.label :min_seconds %><br />
    <%= f.text_field :min_seconds %>
  </p>
  <p>
    <%= f.label :max_seconds %><br />
    <%= f.text_field :max_seconds %>
  </p>
  <p>
    <%= f.label :scheduled_time %><br />
    <%= f.datetime_select :scheduled_time %>
  </p>
  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label :interval %><br />
    <%= f.text_field :interval %>
  </p>
  <p>
    <%= f.label :shortest_update %><br />
    <%= f.text_field :shortest_update %>
  </p>
  <p>
    <%= f.label :longest_no_update %><br />
    <%= f.text_field :longest_no_update %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', frequencies_path %>
