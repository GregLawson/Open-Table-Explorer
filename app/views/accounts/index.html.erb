<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Parent</th>
    <th>Tax reporting</th>
    <th>Budgeting</th>
    <th>account</th>
    <th>edit_account_path(account)</th>
  </tr>

<% for account in @accounts %>
  <tr>
    <td><%=h account.name %></td>
    <td><%=h account.parent %></td>
    <td><%=h account.tax_reporting %></td>
    <td><%=h account.budgeting %></td>
    <td><%=h account %></td>
    <td><%=h edit_account_path(account) %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

