<h1>Listing parameters</h1>

<table>
  <tr>
    <th>Parameter</th>
    <th>Import type</th>
    <th>Value</th>
    <th>Formula</th>
  </tr>

<% for parameter in @parameters %>
  <tr>
    <td><%=h parameter.parameter %></td>
    <td><%=h parameter.import_type %></td>
    <td><%=h parameter.value %></td>
    <td><%=h parameter.formula %></td>
    <td><%= link_to 'Show', parameter %></td>
    <td><%= link_to 'Edit', edit_parameter_path(parameter) %></td>
    <td><%= link_to 'Destroy', parameter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

